<style>
    .outer-div {
        display: flex; justify-content: center;
        height: 100%
    }

    .inner-div {
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

    .form-div {
        display: flex;
        flex-direction: column;
    }

    input {
        padding: 12px;
        border: solid 1px rgb(216, 215, 215);
        border-radius: 6px;
        font-size: 14px;
        margin-bottom: 12px;
    }

    button {
        background-color: dodgerblue;
        font-size: 14px;
        font-weight: bold;
        color: white;
        padding: 12px;
    }

</style>

<script>
    async function handleLogin() {
        const formData = new FormData()
        const email = document.getElementById("email").value
        const password = document.getElementById("password").value
        formData.append("emailAddress", email)
        formData.append("password", password)

        try {
            await axios.put('/api/v1/entrance/login', formData)
            document.location = "/post"
        } catch(err) {
            console.error(err.toString())
        }
        
    }
</script>

<div class="outer-div" style='font-family: Arial, Helvetica, sans-serif'>

    <div class="inner-div">

        <div style='background-color: white; padding: 24px; border-radius: 6px'>

            <div style ='display: flex; justify-content: center;'>
                <div>
                    <div style ='display: flex; justify-content: center;'>
                        <img style="width: 100px" src='/images/hero-ship.png'>
                    </div>

                    <div style="margin-bottom: 16px; font-size: 28px">
                        FullStack Social
                    </div>
                </div>
            </div>
            

             <form class="form-div">

                <div style="font-weight: bold; font-size: 16px; margin-bottom: 16px; text-align: center;">
                    Log into your account
                </div>
    
                <input id="email" name="emailAddress" type="text" placeholder="Email">
                <input id="password" name="password" type="password" placeholder="Password">
                <button onclick=handleLogin() type="button">Login</button>

                <div>
                    Don't have an account?
                    <a href="/signup">Sign up</a>.
                </div>
    
            </form>

        </div>

    </div>

</div>

